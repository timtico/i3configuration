# agenda mode, allows to add events to Google Calendar easily

# show menu with button choices
set $agenda_launcher Google Calendar: [p]add-prive [a]add-werk [v]view-agenda [w]view-2week [e]view-Varvara [enter]cancel
bindsym $mod+Shift+a mode "$agenda_launcher"

mode "$agenda_launcher" {
    bindsym v mode "default";split vertical; exec /usr/bin/gnome-terminal -x sh -c "/usr/local/bin/gcalcli --configFolder ~/.config/gcalcli-work --calendar prive#green --calendar thoman@jibes.nl#cyan agenda 12am $(date -d +"7 days" +"%D") && sleep infinity"
    bindsym w mode "default";split vertical; exec /usr/bin/gnome-terminal -x sh -c "/usr/local/bin/gcalcli --configFolder ~/.config/gcalcli-work --calendar prive#green --calendar thoman@jibes.nl#cyan calw 3 && sleep infinity"
    bindsym e mode "default";exec /usr/bin/gnome-terminal -x sh -c "/usr/local/bin/gcalcli --calendar varvaratishina@gmail.com calw 3 && sleep infinity"

    bindsym p mode "default";exec /usr/bin/gnome-terminal -x sh -c '/usr/local/bin/gcalcli --configFolder ~/.config/gcalcli-prive --cal prive add'
    bindsym a mode "default";exec /usr/bin/gnome-terminal -x sh -c '/usr/local/bin/gcalcli --configFolder ~/.config/gcalcli-work --cal thoman@jibes.nl add'
    bindsym Esc mode "default"
    bindsym Return mode "default"

    #bindsym v mode "default";split vertical; exec /usr/bin/gnome-terminal -x sh -c "/usr/local/bin/gcalcli --calendar werk#cyan --calendar prive agenda 12am $(date -d +"7 days" +"%D") && sleep infinity"
    #bindsym w mode "default";exec /usr/bin/gnome-terminal -x sh -c "/usr/local/bin/gcalcli --calendar werk#cyan --calendar prive#brightgreen calw 3 && sleep infinity"
    #bindsym e mode "default";exec /usr/bin/gnome-terminal -x sh -c "/usr/local/bin/gcalcli --calendar varvaratishina@gmail.com calw 3 && sleep infinity"
}

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

